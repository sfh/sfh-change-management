function theme_stacyImageLeftServices_image(){
/* subu - the below 3 lines is to add the css file to the theme */
    $module_path = drupal_get_path('module','stacyImageLeftServices');
    $full_path = $module_path.'/stacyImageLeftServices.css';
    drupal_add_css($full_path);

    $output =	'<div id="stacyImageLeftServices">'.
	       		'<a href="/" title="Home"><img width="330" height="545" alt="" src="/sites/all/themes/s4h/_img/newones/leftedge/stacy-services-left.JPG" /></a>'.

/* implementation of hook_help()
*/
function stacyImageLeftServices_help($path, $arg){
	if($path =='admin/help#stacyImageLeftServices'){
		$txt = 'Subu says: This module displays stacy\'s image on the left side in a block. ';
		return '<p>'.t($txt).'</p>';
	}
}

/* implementation of hook_block()
*/
function stacyImageLeftServices_block($op='list', $delta=0, $edit=array()){
switch($op){
	case 'list':
		$blocks[0]['info'] = t('Stacy\'s Image Services on the left');
		return $blocks;
	case 'view':
			$content = theme('stacyImageLeftServices_image');
			/*$blocks['subject'] = t('Stacys image');*//* this displays the subject which i dont need now */
			$blocks['content'] = $content;
			return $blocks;

	}
}


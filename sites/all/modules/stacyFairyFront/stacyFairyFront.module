function theme_stacyFairyFront_image(){
/* subu - the below 3 lines is to add the css file to the theme */
    $module_path = drupal_get_path('module','stacyFairyFront');
    $full_path = $module_path.'/stacyFairyFront.css';
    drupal_add_css($full_path);

    $output =   '<div id="stacyFairyFront">'.
                '<img alt="" src="/sites/all/themes/s4h/_img/newones/leftedge/front/stacy-fairy.jpg" />'.
                '</div>';
    return $output;
}
/* module for displaying stacy's quotes on the right bottom of the screen
*/
/* implementation of hook_help()
*/
function stacyImageLeftStylists_help($path, $arg){
	if($path =='admin/help#stacyImageLeftStylists'){
		$txt = 'Subu says: This module displays stacy\'s image on the left side in a block. ';
		return '<p>'.t($txt).'</p>';
	}
}

/* implementation of hook_block()
*/
function stacyImageLeftStylists_block($op='list', $delta=0, $edit=array()){
switch($op){
	case 'list':
		$blocks[0]['info'] = t('Stacy\'s left Image on the Stylist page');
		return $blocks;
	case 'view':
			$content = theme('stacyImageLeftStylists_image');
			/*$blocks['subject'] = t('Stacys image');*//* this displays the subject which i dont need now */
			$blocks['content'] = $content;
			return $blocks;

	}
}


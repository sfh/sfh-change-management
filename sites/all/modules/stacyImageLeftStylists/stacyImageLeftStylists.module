function theme_stacyImageLeftStylists_image(){
/* subu - the below 3 lines is to add the css file to the theme */
    $module_path = drupal_get_path('module','stacyImageLeftStylists');
    $full_path = $module_path.'/stacyImageLeftStylists.css';
    drupal_add_css($full_path);

    $output =	'<div id="stacyImageLeftStylists">'.
	       		'<a href="/" title="Home"><img width="340" height="575" alt="" src="/sites/all/themes/s4h/_img/newones/leftedge/stacy-press-left.JPG" /></a>'.
			    '</div>';
    return $output;
}
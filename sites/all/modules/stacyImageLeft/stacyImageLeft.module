function theme_stacyImageLeft_image(){
/* subu - the below 3 lines is to add the css file to the theme */
    $module_path = drupal_get_path('module','stacyImageLeft');
    $full_path = $module_path.'/stacyImageLeft.css';
    drupal_add_css($full_path);

    $output =	'<div id="stacyImageLeft">'.
	       		'<img  width="340" height="450" alt="" src="/sites/all/themes/s4h/_img/stacy_left_image.JPG" />'.
			    '</div>';

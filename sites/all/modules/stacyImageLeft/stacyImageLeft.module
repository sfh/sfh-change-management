function stacyImageLeft_help($path, $arg){
	if($path =='admin/help#stacyImageLeft'){
		$txt = 'Subu says: This module displays stacy\'s image on the left sied in a block. ';
		return '<p>'.t($txt).'</p>';
	}
}

/* implementation of hook_block()
*/
function stacyImageLeft_block($op='list', $delta=0, $edit=array()){
switch($op){
	case 'list':
		$blocks[0]['info'] = t('Stacy\'s Image');
		return $blocks;
	case 'view':
			$content = theme('stacyImageLeft_image');
			/*$blocks['subject'] = t('Stacys image');*//* this displays the subject which i dont need now */
			$blocks['content'] = $content;
			return $blocks;

	}
}


/* module for displaying stacy's quotes on the right bottom of the screen
*/
/* implementation of hook_help()
*/
function stacyquotes_Gifts_help($path, $arg){
	if($path =='admin/help#stacyquotes_Gifts'){
		$txt = 'Subu says: This module displays stacy quotes in blocks. '.
				'It assumes the existence of a content type named #quote".';
		return '<p>'.t($txt).'</p>';
	}
}

/* implementation of hook_block()
*/
function stacyquotes_Gifts_block($op='list', $delta=0, $edit=array()){
switch($op){
	case 'list':
		$blocks[0]['info'] = t('Stacy\'s quotes on Gift page');
		return $blocks;
	case 'view':
			$content = theme(	'stacyquotes_Gifts_quote',
								check_plain($item));

			$blocks['content'] = $content;
			return $blocks;
	}
}



function stacyquotes_Gifts_theme(){
 return array(
	'stacyquotes_Gifts_quote' => array(
		'arguments' => array(),
		),
	);
}

